  echo '```'
  tree -I '.git|node_modules|build|dist' --dirsfirst app_ricette_backend/ 2>/dev/null
  echo '```'
  echo ""
  
  echo "## ðŸ“± FRONTEND (Flutter - App)"
  echo '```'
  tree -I '.git|build|.dart_tool' --dirsfirst app_ricette_frontend/ 2>/dev/null
  echo '```'
  echo ""
  
  echo "## ðŸ“Š STATISTICHE"
  echo "- File backend totali: $(find app_ricette_backend -type f 2>/dev/null | wc -l)"
  echo "- File frontend totali: $(find app_ricette_frontend -type f 2>/dev/null | wc -l)"
  echo "- File frontend Dart: $(find app_ricette_frontend -name "*.dart" -type f 2>/dev/null | wc -l)"
  echo "- Data generazione: $(date)"
