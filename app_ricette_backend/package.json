{
  "name": "app_ricette_backend",
  "version": "1.0.0",
  "description": "Backend API per app ricette social",
  "main": "dist/server.js",
  "scripts": {
    "dev": "./scripts/dev-with-services.sh",
    "dev:simple": "nodemon --exec \"npx ts-node\" src/server.ts",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down",
    "services:logs": "docker-compose logs -f",
    "services:restart": "docker-compose restart",
    "services:status": "docker-compose ps",
    "start": "node dist/server.js",
    "build": "tsc",
    "minio:setup": "docker exec ricette-minio /bin/sh -c \"mc alias set local http://localhost:9000 minioadmin minioadmin && mc mb local/ricette-images --ignore-existing && mc anonymous set download local/ricette-images\"",
    "minio:status": "curl -s http://localhost:9000/minio/health/live && echo '✅ MinIO pronto' || echo '❌ MinIO non risponde'",
    "db:status": "docker exec ricette-db pg_isready -U postgres && echo '✅ PostgreSQL pronto' || echo '❌ PostgreSQL non risponde'",
    "db:migrate": "npx prisma migrate dev",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset --force",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "recipes",
    "social",
    "api",
    "node",
    "typescript"
  ],
  "author": "flutta_211",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "6.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "minio": "^8.0.6",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.12",
    "prisma": "6.0.0",
    "slugify": "^1.6.6",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.30",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
